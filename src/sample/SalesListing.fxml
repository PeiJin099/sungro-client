<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.control.cell.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox BorderPane.alignment="TOP_LEFT" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1">
    <Text strokeType="OUTSIDE" strokeWidth="0.0" styleClass="page-title" text="Users">
        <VBox.margin>
            <Insets bottom="3.0" left="3.0" right="3.0" top="3.0"/>
        </VBox.margin>
    </Text>
    <FlowPane>
        <Button mnemonicParsing="false" text="Back">
            <FlowPane.margin>
                <Insets bottom="3.0" left="3.0" right="3.0" top="3.0"/>
            </FlowPane.margin>
        </Button>
        <Button mnemonicParsing="false" onAction="#handleAddUserBtnAction" text="Add User">
            <FlowPane.margin>
                <Insets bottom="3.0" left="3.0" right="3.0" top="3.0"/>
            </FlowPane.margin>
        </Button>
    </FlowPane>
    <FlowPane>
        <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Filter">
            <FlowPane.margin>
                <Insets bottom="3.0" left="3.0" right="3.0" top="3.0"/>
            </FlowPane.margin>
        </Text>
        <Label text="SKU"/>
        <TextField fx:id="nameInput">
            <opaqueInsets>
                <Insets/>
            </opaqueInsets>
            <FlowPane.margin>
                <Insets bottom="3.0" left="3.0" right="3.0" top="3.0"/>
            </FlowPane.margin>
        </TextField>
        <Label text="Category">
            <opaqueInsets>
                <Insets/>
            </opaqueInsets>
            <FlowPane.margin>
                <Insets bottom="3.0" left="3.0" right="3.0" top="3.0"/>
            </FlowPane.margin>
        </Label>
        <TextField fx:id="categoryInput">
            <FlowPane.margin>
                <Insets bottom="3.0" left="3.0" right="3.0" top="3.0"/>
            </FlowPane.margin>
        </TextField>

        <Label text="Expiry Date From ">
            <FlowPane.margin>
                <Insets bottom="3.0" left="3.0" right="3.0" top="3.0"/>
            </FlowPane.margin>
        </Label>
        <DatePicker>
            <FlowPane.margin>
                <Insets bottom="3.0" left="3.0" right="3.0" top="3.0"/>
            </FlowPane.margin>
        </DatePicker>
        <Label text="To ">
            <FlowPane.margin>
                <Insets bottom="3.0" left="3.0" right="3.0" top="3.0"/>
            </FlowPane.margin>
        </Label>
        <DatePicker>
            <FlowPane.margin>
                <Insets bottom="3.0" left="3.0" right="3.0" top="3.0"/>
            </FlowPane.margin>
        </DatePicker>
        <Button mnemonicParsing="false" text="Search" onAction="#handleGoBtnAction"/>
    </FlowPane>
    <FlowPane alignment="TOP_RIGHT">
        <Button fx:id="viewBtn" mnemonicParsing="false" onAction="#handleViewBtnAction" text="View">
            <FlowPane.margin>
                <Insets bottom="3.0" left="3.0" right="3.0" top="3.0"/>
            </FlowPane.margin>
        </Button>
        <Button fx:id="editBtn" mnemonicParsing="false" onAction="#handleEditBtnAction" text="Edit">
            <FlowPane.margin>
                <Insets bottom="3.0" left="3.0" right="3.0" top="3.0"/>
            </FlowPane.margin>
        </Button>
        <Button fx:id="toggleStatusBtn" mnemonicParsing="false" onAction="#handleToggleStatusBtnAction"
                text="Toggle Status">
            <FlowPane.margin>
                <Insets bottom="3.0" left="3.0" right="3.0" top="3.0"/>
            </FlowPane.margin>
        </Button>
    </FlowPane>
    <TableView fx:id="tableView" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn editable="false" sortable="false" text="SKU">
                <cellValueFactory>
                    <PropertyValueFactory property="productId"/>
                </cellValueFactory>
            </TableColumn>
            <TableColumn editable="false" sortable="false" text="Product Name">
                <cellValueFactory>
                    <PropertyValueFactory property="picture"/>
                </cellValueFactory>
            </TableColumn>
            <TableColumn editable="false" sortable="false" text="Category">
                <cellValueFactory>
                    <PropertyValueFactory property="Name"/>
                </cellValueFactory>
            </TableColumn>
            <TableColumn editable="false" sortable="false" text="Expiry Date">
                <cellValueFactory>
                    <PropertyValueFactory property="category"/>
                </cellValueFactory>
            </TableColumn>
            <TableColumn editable="false" sortable="false" text="Quality">
                <cellValueFactory>
                    <PropertyValueFactory property="price"/>
                </cellValueFactory>
            </TableColumn>
            <!--            <TableColumn editable="false" sortable="false" text="ID Type">-->
            <!--                <cellValueFactory>-->
            <!--                    <PropertyValueFactory property="idType"/>-->
            <!--                </cellValueFactory>-->
            <!--            </TableColumn>-->
            <!--            <TableColumn editable="false" sortable="false" text="Role">-->
            <!--                <cellValueFactory>-->
            <!--                    <PropertyValueFactory property="role"/>-->
            <!--                </cellValueFactory>-->
            <!--            </TableColumn>-->
            <TableColumn editable="false" sortable="false" text="Status">
                <cellValueFactory>
                    <PropertyValueFactory property="status"/>
                </cellValueFactory>
            </TableColumn>
        </columns>
    </TableView>
    <FlowPane>
        <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Page"/>
        <Text fx:id="currentPageTxt" strokeType="OUTSIDE" strokeWidth="0.0" text="1"/>
        <Text strokeType="OUTSIDE" strokeWidth="0.0" text="/"/>
        <Text fx:id="maxPageTxt" strokeType="OUTSIDE" strokeWidth="0.0" text="5"/>
    </FlowPane>
    <FlowPane>
        <Button mnemonicParsing="false" onAction="#handlePrevBtnAction" text="Prev"/>
        <Button mnemonicParsing="false" onAction="#handleNextBtnAction" text="Next"/>
        <Label text="Go to page"/>
        <TextField fx:id="pageInput" onAction="#handlePageInputAction"/>
    </FlowPane>
</VBox>

